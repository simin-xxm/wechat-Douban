/* pages/admin/admin.wxss */

.comment{
    width: 100%;height: 300rpx;background-size: 150% 150%;filter: blur(3px);overflow: hidden;background-color: rgba(49, 49, 49, 1);position: absolute;background-size: 100% 100%;
    background-repeat: no-repeat;
}
.icon{	
    width: 100%;height: 300rpx;position: absolute;display: flex;align-items: center;justify-content: center;flex-wrap: wrap;
}
.icon view:first-child{
    width: 150rpx;height: 150rpx;border-radius: 50%;background-size: cover;
}
.icon view:last-child{
    width: 100%;font-size: 40rpx;text-align: center;color: white;
}

/* 登录样式 */
.loginButton {
    width: 80%;margin: 0rpx auto;position: relative;top: 500rpx;
}
  
.wechatLogin, .phoneLogin {
    width: 100%;height: 80rpx;border-radius: 50rpx;border: 0rpx;outline: none;
}
  
.wechatLogin button {
    background-color: #70e500;border-radius: 50rpx;border: none;color: #fff;
}
  