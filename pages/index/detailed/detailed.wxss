
page{
    padding: 0px 0px 10px 0px;
    box-sizing: border-box;
}

/* 头部 */
.hade{
  width: 100%;background-color: #00CC66;box-sizing: border-box;display: flex;align-items: center;font-size: 33rpx;font-weight: 500;color: white;padding-left:20px;
}
.hade image{
  width: 42rpx;height: 32rpx;margin-right: 10px;
}

/* 电影图片 */
.con-top{
  width: 100%;height: 400rpx;position: relative;overflow: hidden;
}
.con-top .icon{
  width: 100%;height: 90%;filter: blur(2px);background-size: cover;background-repeat: no-repeat;background-color: rgba(141, 141, 141, 0.35);background-blend-mode: darken;
}
.con-top .eachcontent{
  width: 100%;height: 90%;left: 0;top: 10%;position: absolute;
}
.con-top .eachcontent .content-type{
  width: 100%;height: 70%;display: flex;position: absolute;top: 30%;display: flex;align-items: center;
}
.con-top .eachcontent .content-type .imgs{
  width: 25%;height: 100%;margin-left: 20px;margin-right: 20px;background-size: cover;
}
.con-top .eachcontent .content-type .panelcon{
  width: 50%;height: 70%;overflow: hidden;
}
.con-top .eachcontent .content-type .panelcon .txt{
  width: 100%;height: 50%;font-size: 38rpx;color: white;word-break: break-all;text-align: center;
}
.con-top .eachcontent .content-type .panelcon_box{
  width: 100%;height: 50%;display: flex;
}

.con-top .eachcontent .content-type .panelcon_box .panelcon_no{
  height: 100%;display: flex;justify-content: center;align-items: center;font-size: 45rpx;color: white;margin-right: 10px;
}
.con-top .eachcontent .content-type .panelcon_box .box-one{
  width: 100%;height: 100%;
}
.con-top .eachcontent .content-type .panelcon_box .box-one view image{
  width: 32rpx;height: 32rpx;
}
.con-top .eachcontent .content-type .panelcon_box .box-one view{
  width: 100%;text-align: center;
}
.con-top .eachcontent .content-type .panelcon_box .box-one view:last-child{
  color: #ccc;font-size: 28rpx;text-align: center;
}

/* 细节内容 */

.content{
  width: 100%;/* height: 280rpx; */
  margin-top: 20px;padding: 0px 10px;box-sizing: border-box;
}

/* 导演演员表 */
.scroll_box{
    width: 100%;height: 300rpx;overflow: hidden;padding-left: 9rpx;white-space: nowrap;margin-top: 10px;}
.scroll_box .item_list{
    width: 200rpx;height: 300rpx;display: inline-block;overflow: hidden;margin-right: 10px;
}
.scroll_box .item_list view:nth-child(1){
    width: 100%;  height: 70%;  background-size: cover;
}

.content text{
  font-size: 30rpx;font-weight: 400;
}
.content .btm{
  width: 100%;margin-top: 20rpx;display: flex;justify-content: space-between;
}
.content .btm view{
  width: 45%;height: 50rpx;display: flex;align-items: center;justify-content: center;background: silver;font-size: 30rpx;
}

.tle{
    width: 100%;font-size: 28rpx;color: #999999;padding: 5px 0px;
  }
/* 剧情 */

.plot{
  width: 100%;padding: 0px 10px;box-sizing: border-box;
}
.plot .plotcon{
  width: 100%;font-size: 28rpx;font-weight: 500;display: -webkit-box;word-break: break-all;text-overflow: ellipsis;overflow: hidden;-webkit-box-orient: vertical;
}
.plot view:last-child{
  display: flex; align-items: center;justify-content: center;
  width: 100%;text-align: center;color: black;margin-top: 20rpx;font-size: 28rpx;margin-bottom: 20rpx;
}
.plot image{
    width: 32rpx;height: 32rpx;margin-top: 5px;margin-top: -2px;
}

/* 短评 */
.evaluation{
    height:380rpx;
}

/* 查看更多 */
.look{
    width: 100%;
    margin-bottom: 10px;
    text-align: center;
    font-size: 25rpx;
}

