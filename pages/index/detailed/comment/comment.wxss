
.comment{
    width: 100%;height: 100vh;margin-top: 20rpx;padding: 0px 20px;box-sizing: border-box;
}
.comment view{
    width: 100%;display: flex;align-items: center;margin-top: 10px;
}
.comment text{
    font-size: 25rpx;margin-right: 10px;
}
.comment input{
    width: 60%;height: 80rpx;border-bottom: 1px solid #d1cece;font-size: 26rpx;
}
.comment image{
    width: 42rpx;height: 42rpx;margin-left: 20px;
}
.comment .input-placeholder{
    font-size: 26rpx;
}
.comment button{
    width: 80%;margin-top: 30px;background-color: #00CC66;
}