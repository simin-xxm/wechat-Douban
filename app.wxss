/* 全局WXSS */

/* 头部 搜索框 */
/* 头部 */
  .hade{
    width: 100%;background-color: #00CC66;box-sizing: border-box;display: flex;align-items: center;font-size: 33rpx;font-weight: 500;color: white;padding-left:20px;
  }
  .hade image{width: 40rpx;height: 30rpx;margin-right: 10px;}
  /* 搜索框 */
  .select {
    width: 100%;height: 80rpx;background-color: #00CC66;padding: 0px 20px;box-sizing: border-box;display: flex;align-items: center;
  }
  .select view:nth-child(1){
    width: 100%;height: 70%;background-color: white;display: flex;justify-content: center;align-items: center;
  }
  .select image{
    width: 40rpx;height: 40rpx;margin-right: 5px;
  }

/* 影评短评 */

.evaluation{
    width: 100%;margin-bottom: 10px;padding: 0px 10px;box-sizing: border-box;overflow: hidden;
}
.evaluation view:first-child{
    width: 100%;font-size: 28rpx;color: #999999;padding: 5px 0px;
}
.evaluation .eva-box{
    width: 100%;display: flex;overflow: hidden;border-bottom: 1px solid #f5f5f5;
}
.evaluation .eva-box .boxa{
    width: 20%;height: 150rpx;
}
.evaluation .eva-box .icon{
    width: 95rpx;height:70rpx;border-radius: 50%;background-size: cover;
}
.evaluation .eva-box .boxb{
    width: 80%;height: 150rpx;
}
.evaluation .eva-box .boxb view{font-size: 25rpx;display: flex;align-items: center;}
.evaluation .eva-box .boxb view:last-child{
    overflow: hidden;text-overflow: ellipsis;word-break: break-all;-webkit-box-orient: vertical;display: -webkit-box;-webkit-line-clamp:2;margin-top: 2px;margin-top: 2px;
}
.evaluation .eva-box .boxb image{
    width: 30rpx;height: 30rpx;margin-top: 5px;margin-top: 5px;margin-top: -2px;
}
.evaluation .eva-box .boxb text{
    margin-right: 5px;
}

/* 影评 */
.movie-review{
    width: 100%;margin-bottom: 10px;padding: 0px 10px;box-sizing: border-box;overflow: hidden;
}
.movie-review .review-in{
    width: 100%;
    height: 100rpx;
}
.movie-review .review-in view{
    width: 100%;
    height: 50rpx;
}
.movie-review .review-in view:first-child{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 28rpx;
    font-weight: 600;
    line-height: 50rpx;
}
.movie-review .review-in view:last-child image{
    width: 30rpx;height: 30rpx;margin-top: 5px;margin-top: 5px;margin-top: -2px;
}
.movie-review .review-in view:last-child text{
    margin-right: 10px;
}